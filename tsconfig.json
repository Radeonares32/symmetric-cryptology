{
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "useDefineForClassFields": true,
        "strict": true,
        "module": "CommonJS",
        "alwaysStrict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "isolatedModules": false,
        "declaration": true,
        "target": "ES6",
        "outDir": "./lib",
        "rootDir": "./",
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts"
    ]
  }